<!--Section: Block Content-->
<div hidden id="get-course-id">{{this.course._id}}</div>
<div hidden id="get-course">{{this.course}}</div>
<div class="backdrop hide" id="table-rating">
    <form class="table-rating">
    <p style="font-size:25px; font-weight:500">Rating</p>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="1" checked>
        <label class="form-check-label" for="exampleRadios1">
            Very Bad
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="2">
        <label class="form-check-label" for="exampleRadios2">
            Bad 
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="3">
        <label class="form-check-label" for="exampleRadios3">
            Normal
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4" value="4">
        <label class="form-check-label" for="exampleRadios4">
            Good
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios5" value="5">
        <label class="form-check-label" for="exampleRadios5">
            Very Good
        </label>
    </div>
    <button id="btn-give-feedback" style="margin-top:10px;font-weight:500;padding:10px;background-color:rgb(230, 230, 18);cursor:pointer;box-shadow:2px 2px 5px rgb(153, 153, 153)">Give feedback</button>
</form>
</div>

<div class="card-body">
    <div class="small-container">
        <section class="mb-5">
            <div class="row">
                <div class="col-md-6 mb-4 mb-md-0">
                    <div class="mdb-lightbox">
                        <div class="row product-gallery mx-1">
                            <div class="col-12 mb-0">
                                <figure class="view overlay rounded z-depth-1 main-img">
                                    <a href={{this.course.image}} data-size="710x823">
                                        <img src={{this.course.image}} class="img-fluid z-depth-1">
                                    </a>
                                </figure>
                            </div>
                            <div class="col-12 mb-0">
                                <div class="col-1-courseDetail">
                                    <center>
                                        <h3>Description</h3>
                                    </center>
                                    {{{this.course.detailContent}}}
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">

                    <h5>{{this.course.name}}</h5>
                    {{!-- <p class="mb-2 text-muted text-uppercase small">Categories</p> --}}
                    <p>
                        <span class="mr-1"
                            style="text-decoration: line-through;"><strong>{{this.course.price}}$</strong></span>
                        {{!-- <span class="mr-1"><strong>Sale 0.5$</strong></span> --}}
                    </p>
                    <button type="button" id="btn-add-wishlist" class="btn btn-dark btn-md mr-1 mb-2"><i
                            class="fa fa-heart"></i>
                        WishList</button>
                    <p class="pt-1">{{this.course.mainContent}}</p>
                    <div class="table-responsive">
                        <table class="table table-sm table-borderless mb-0" style="width:95%">
                            <tbody>
                                <tr>
                                    <th class="pl-0 w-25" scope="row"><strong>Field</strong></th>
                                    <td>{{this.course.field}}</td>
                                </tr>
                                <tr>
                                    <th class="pl-0 w-25" scope="row"><strong>Created by</strong></th>
                                    <td>{{this.course.teacher.userName}}</td>
                                </tr>
                                <tr>
                                    <th class="pl-0 w-25" scope="row"><strong>Rating</strong></th>
                                    <td>
                                        <div class=" text-warning">
                                            {{#times this.course.rating }}
                                            <i class="fa fa-star"></i>
                                            {{/times}}
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="pl-0 w-25" scope="row"><strong>Views</strong></th>
                                    <td>{{this.course.student.length}}</td>
                                </tr>
                                <tr>
                                    <th class="pl-0 w-25" scope="row"><strong>Registered</strong></th>
                                    <td>{{this.course.timeCreated}}</td>
                                </tr>
                                <tr>
                                    <th class="pl-0 w-25" scope="row"><strong>Last Updated</strong></th>
                                    <td>{{this.course.lastUpdated}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="table-responsive mb-2">
                        <table class="table table-sm table-borderless">
                            <tbody>
                                <tr>
                                    <td class="pl-0">
                                        <div class="def-number-input number-input safari_only mb-0">
                                            <button
                                                onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                                class="minus"></button>
                                            <input class="quantity" min="0" name="quantity" value="1" type="number">
                                            <button
                                                onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                                class="plus"></button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <button type="button" class="btn btn-primary btn-md mr-1 mb-2" id="btn-buy-now">Buy now</button>
                    <button type="button" class="btn btn-light btn-md mr-1 mb-2"><i
                            class="fas fa-shopping-cart pr-2"></i>Add to cart</button>
                </div>
            </div>

        </section>
    </div>


    <hr style="border-width:3px">


    <div class="testimonial">
        <div class="small-container">

            <div class="h2-align">
                <H2>Best Seller</H2>
            </div>
            <div class="row-2">
                <div class="col-3">
                    <i class="fa fa-quote-left"></i>
                    <p>Text </p>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                    <img src={{this.course.image}}>
                    <h3>Sean Parker</h3>
                </div>
            </div>


        </div>

        <hr style="border-width:3px">

        <div class="card" style="width:50%;">
            <h5 class="card-header">Content</h5>
            <div class="card-body">
                <h5 class="card-title">Phần 1</h5>
                <ul>
                    <li class="">
                        <a href="">
                            <h5>Bài 1: Giới thiệu tổng quan</h5>
                        </a>
                    </li>
                    <li class="">
                        <a href="">
                            <h5>Bài 2: Giới thiệu NodeJS</h5>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <hr style="border-width:3px">
        <div class="h2-align">
            <H2>Reviews</H2>
        </div>
        {{#each this.course.comments}}
        <div class="review-container">
            <div class="review-icon">
                <img src="https://i.pinimg.com/236x/09/3d/05/093d059a988878a4ba30f3d6c79926d6.jpg" alt="">
            </div>
            <div class="review" style="margin-left: 20px;">
                <p>{{this.content}}</p>
                <div class=" text-warning">
                    <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i
                        class="fa fa-star"></i><i class="fa fa-star"></i>
                    <Span style="color: black;font-size:large">Great</Span>
                </div>
            </div>

        </div>
        <center>
            <hr style="border-width:2px;width:60%;">
        </center>
        {{/each}}
        <div class="review-container-2">
            <div class="form-group" style="width:100%">
                <label for="exampleFormControlTextarea1">Reviews</label>
                <textarea class="form-control" id="comment-content" rows="3" style="width:100%"></textarea>
            </div>
            <a name="" id="btn-write-comment" class="btn btn-primary" href="#" role="button" style="width:100%;">Send</a>
        </div>
        <hr style="border-width:3px">
        <div class="h2-align">
            <H2>Author</H2>
        </div>
        <div class="author-container">
            <div class="author-icon">
                <img src="https://transang.me/content/images/2019/01/1200px-Python.svg.png" alt="">
            </div>
            <div class="author" style="margin-left: 20px;">
                <p>Name of author: {{this.course.teacher.userName}}</p>
                <p>Name of degree: {{this.course.teacher.degree}}</p>
                <p>Decription</p>
            </div>

        </div>
    </div>
    <script type="module" src="/js/course.js">
    </script>

    <!--Section: Block Content-->