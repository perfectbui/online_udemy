<form class="form-signup" method="POST" action="/signup/teacher">
   {{#if this.message}}
       <div class="signup-fail">Sign Up Failed !!!</div>
   {{/if}}
    <h2>SIGN UP FOR TEACHER</h2>
    <input type="text" placeholder="UserName" name="userName"
    />
    <input type="email" placeholder="Email" name="email"
    />
    <input type="password" placeholder="Password" name="password" 
    />
    <input type="text" placeholder="Age" name="age"
    />
      <input type="text" placeholder="Degree" name="degree"
    />
    <input type="text" placeholder="Address" name="address"
    />
    <input type="text" placeholder="Phone Number" name="phone"
    />
    <button class="sign-up" type="submit">
        Sign Up
    </button>
</form>
<script>
    document.querySelector('.nav-link.active').classList.remove('active');
document.querySelector('.nav-link.signup').classList.add('active');
</script>