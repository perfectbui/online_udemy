<div>
    <div>
        <h2 style="margin-left: 50px;">Favorite Courses</h2>
        <div class="d-flex flex-row flex-wrap" id="list-item">
            {{#each this.favoriteCourses}}
            <a href="/course/{{this._id}}" style="text-decoration: none;">
                <div class="d-flex flex-column flex-wrap mr-4 item-course">
                    <div>Tên bài giảng:{{this.name}}</div>
                    <div>Lĩnh vực:{{this.field}}</div>
                    <img src="{{this.image}}" />
                    <div>Tác giả:{{this.teacher.userName}}</div>
                    <div>
                        {{#times this.rating }}
                        <i class="fa fa-star" style="color:rgba(248, 211, 0, 0.849)"></i>
                        {{/times}}
                    </div>
                    <div>Số lượng người mua:{{this.student.length}}</div>
                    <div>Giá:{{this.price}}</div>
                    <div>Views: {{this.numViews}}<i style="margin-left: 2px;" class="fas fa-eye"></i></div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
    <div>
        <h2 style="margin-left: 50px;">Most Views Courses</h2>
        <div class="d-flex flex-row flex-wrap" id="list-item">
            {{#each this.mostViewCourses}}
            <a href="/course/{{this._id}}" style="text-decoration: none;">
                <div class="d-flex flex-column flex-wrap mr-4 item-course">
                    <div>Tên bài giảng:{{this.name}}</div>
                    <div>Lĩnh vực:{{this.field}}</div>
                    <img src="{{this.image}}" />
                    <div>Tác giả:{{this.teacher.userName}}</div>
                    <div>
                        {{#times this.rating }}
                        <i class="fa fa-star" style="color:rgba(248, 211, 0, 0.849)"></i>
                        {{/times}}
                    </div>
                    <div>Số lượng người mua:{{this.student.length}}</div>
                    <div>Giá:{{this.price}}</div>
                    <div>Views: {{this.numViews}}<i style="margin-left: 2px;" class="fas fa-eye"></i></div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
    <div>
        <h2 style="margin-left: 50px;">New Courses</h2>
        <div class="d-flex flex-row flex-wrap " id="list-item" style="display: flex;">
            {{#each this.newCourses}}
            <div>

                <a href="/course/{{this._id}}" style="text-decoration: none;">
                    <div class="d-flex flex-column flex-wrap mr-4 item-course">
                        <div>Tên bài giảng:{{this.name}}</div>
                        <div>Lĩnh vực:{{this.field}}</div>
                        <img src="{{this.image}}" />
                        <div>Tác giả:{{this.teacher.userName}}</div>
                        <div>
                            {{#times this.rating }}
                            <i class="fa fa-star" style="color:rgba(248, 211, 0, 0.849)"></i>
                            {{/times}}
                        </div>
                        <div>Số lượng người mua:{{this.student.length}}</div>
                        <div>Giá:{{this.price}}</div>
                        <div>Views: {{this.numViews}}<i style="margin-left: 2px;" class="fas fa-eye"></i></div>
                    </div>
                </a>
            </div>
            {{/each}}


        </div>
    </div>

    <div>
        <h2 style="margin-left: 50px;">Best Category</h2>
        <div style="margin-left:20px;border-top: rgb(179, 178, 178) 2px solid;width:80%;">
            {{#each this.bestCategory}}
            <li style="font-weight:500;margin-left: 50px;margin-top:10px;list-style-type: circle;">{{this}}</li>
            {{/each}}
        </div>
    </div>
</div>
