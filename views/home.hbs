<div>
    <div style="margin:20px;">
        <span>Filter</span>
        <select class="form-control" style="width:120px;" id="filter">
               <option></option>
            <option value="rating">Rating</option>
            <option value="price">Price</option>
        </select>
    </div>
    <div class="d-flex flex-row flex-wrap" id="list-item">
        {{#each this.courses}}
        <div class="d-flex flex-column flex-wrap mr-4" id="item">
            <div>Tên bài giảng:{{this.name}}</div>
            <div>Lĩnh vực:{{this.field}}</div>
            <img src="{{this.image}}" />
            <div>Tác giả:{{this.teacher.userName}}</div>
            <div> Rating:5 sao (<span>Số lượng ng mua:1</span>)</div>
            {{!-- <div> Rating:{{this.rating}} (<span>Số lượng ng mua:{{this.numCustomer}}</span>)</div> --}}
            <div>Giá:{{this.price}}</div>
        </div>
        {{/each}}
    </div>
</div>
<script src="/js/home.js"></script>